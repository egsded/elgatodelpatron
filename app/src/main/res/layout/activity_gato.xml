<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gato"
    android:background="#000">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gato del gato"
        android:textColor="#fff"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn1"
        android:layout_marginBottom="50dp"
        android:id="@+id/txt"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn5"
        android:onClick="btn5"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn5"
        android:id="@+id/btn8"
        android:onClick="btn8"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn5"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn2"
        android:onClick="btn2"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_above="@+id/btn5"
        android:id="@+id/btn1"
        android:onClick="btn1"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/btn2"
        android:layout_above="@+id/btn5"
        android:id="@+id/btn3"
        android:onClick="btn3"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_below="@+id/btn1"
        android:id="@+id/btn4"
        android:onClick="btn4"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/btn5"
        android:layout_below="@+id/btn1"
        android:id="@+id/btn6"
        android:onClick="btn6"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_below="@+id/btn4"
        android:id="@+id/btn7"
        android:onClick="btn7"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/btn5"
        android:layout_below="@+id/btn4"
        android:id="@+id/btn9"
        android:onClick="btn9"/>

</RelativeLayout>